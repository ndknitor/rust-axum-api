{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug rust-api-server",
            "cargo": {
                "args": ["build", "--bin=rust-api-server", "--package=rust-api-server"],
                "filter": {
                    "name": "rust-api-server",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "PATH": "${env:HOME}/.cargo/bin:${env:PATH}"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests",
            "cargo": {
                "args": ["test", "--no-run", "--lib"],
                "filter": {
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "PATH": "${env:HOME}/.cargo/bin:${env:PATH}"
            }
        }
    ]
}
